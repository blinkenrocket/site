@import './_settings'
@import './_material-color'

normalize-css()
base()
typography()

rocket-height = 16.634rem
rocket-height = 26.913rem

bg-color = #113B50
bg-color-1 = #061D29
bg-color-2 = #135779

.content
	background-color bg-color
	max-width 100%
	overflow-x hidden

h1, h2
	color clr-white
	text-transform uppercase
	font-weight 100

h1
	margin 0 2.5rem
	font-size 6.854rem

h2
	font-size 4.236rem


a
	reset-link()
	color clr-white
	font-size 2.618rem
	font-weight 200
	text-align center
	display block

	&:hover, &:hover .fa
		color clr-red

	.fa
		display block
		margin-bottom 1rem

.fa
	color clr-white
	font-size 11.089rem

.hero, .info, .links
	position relative
	box-shadow 0 4px 6px rgba(0,0,0,0.12), 0 3px 4px rgba(0,0,0,0.21)

.hero
	z-index 100
	display flex
	width 100vw
	min-height 100vh
	padding 4rem 0
	align-items center
	justify-content center
	background-color bg-color-1
	// animation bg-fade 3s alternate infinite

	h1
		span.blinken
			color clr-red
		span.rocket
			color clr-white

	svg
		height rocket-height

		#bulleye-shadow
			mix-blend-mode multiply

		#bulleye-inner
			animation blink-eye 4s infinite



.info, .contact
	display flex
	flex-direction column
	align-items center
	padding 15rem 0

.info
	z-index 99
	background-color bg-color

.links
	z-index 98
	display flex
	background-color bg-color-2
	a
		flex 1 0
		padding 5rem 0

		&:hover
			background-color bg-color-1

	.manual
		background-color clr-deep-orange-a400
	.editor
		background-color #FF7423

.contact
	z-index 97




@keyframes bg-fade
	from
		backgound-color bg-color-1

	to
		background-color bg-color-2

blink-off = clr-blue-grey-800
blink-on = clr-red

blink-frame(at)
	{at - 5}
		fill blink-off
	{at - 3}
		fill blink-on
	{at}
		fill blink-on
	{at + 5}
		fill blink-off

@keyframes blink-eye
	0%
		fill blink-off
	blink-frame(30%)
	blink-frame(40%)
	blink-frame(60%)
	blink-frame(68%)
	blink-frame(75%)
	100%
		fill blink-off
